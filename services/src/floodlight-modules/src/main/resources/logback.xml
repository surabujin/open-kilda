<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" debug="true" scanPeriod="5 seconds">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.S} %-5level [%logger{15}] [%thread] %msg%n</pattern>
    </encoder>
  </appender>
  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="LOGSTASH" />
  </root>

  <!--<logger name="io" level="ERROR"/> &lt;!&ndash; Netty logging &ndash;&gt;-->
  <!--<logger name="LogService" level="ERROR"/> &lt;!&ndash; Restlet access logging &ndash;&gt;-->
  <!--<logger name="net.floodlightcontroller" level="DEBUG"/>-->
  <!--<logger name="org.openkilda.floodlight.*" level="DEBUG"/>-->
  <!--<logger name="org.sdnplatform" level="ERROR"/>-->
  <!--<logger name="org.openkilda" level="DEBUG"/>-->
  <!--<logger name="ch.qos.logback" level="DEBUG"/>-->
  <logger name="net.floodlightcontroller.core.util.SingletonTask" level="INFO"/>
  <logger name="net.floodlightcontroller.core.internal.OFChannelHandler" level="INFO"/>

</configuration>
