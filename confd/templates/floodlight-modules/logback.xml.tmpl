<configuration scan="true" debug="true" scanPeriod="5 seconds">
  <!-- stdout -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} %-5level %logger{15} - [%X] %msg%n</pattern>
    </encoder>
  </appender>
{{- if eq (getv "/kilda_logging_json_file") "true" }}
  <!-- json-file -->
  <appender name="JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>{{ getv "/kilda_logging_logfile_path" }}/floodlight-${FL_ROLE}-${FL_REGION}.log.json</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>{{ getv "/kilda_logging_logfile_path" }}/floodlight-${FL_ROLE}-${FL_REGION}.log.json.%d{yyyy-MM-dd}.%i</fileNamePattern>
       <maxFileSize>100MB</maxFileSize>
       <totalSizeCap>20GB</totalSizeCap>
       <maxHistory>10</maxHistory>
    </rollingPolicy>
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp/>
        <version/>
        <message/>
        <loggerName>
          <fieldName>loggerName</fieldName>
        </loggerName>
        <threadName>
          <fieldName>thread</fieldName>
        </threadName>
        <logLevel/>
        <nestedField>
          <fieldName>contextMap</fieldName>
          <providers>
            <mdc/>
          </providers>
        </nestedField>
        <stackTrace/>
        <pattern>
          <pattern>{"role":"${FL_ROLE}","region":"${FL_REGION}"}</pattern>
        </pattern>
      </providers>
    </encoder>
  </appender>
{{- end }}
{{- if eq (getv "/kilda_logging_logstash") "true" }}
  <!-- json-logstash -->
  <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
    <destination>{{ getv "/kilda_logging_logstash_host" }}:{{ getv "/kilda_logging_port_floodlight" }}</destination>
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp/>
        <version/>
        <message/>
        <loggerName>
          <fieldName>loggerName</fieldName>
        </loggerName>
        <threadName>
          <fieldName>thread</fieldName>
        </threadName>
        <logLevel/>
        <nestedField>
          <fieldName>contextMap</fieldName>
          <providers>
            <mdc/>
          </providers>
        </nestedField>
        <stackTrace/>
        <pattern>
          <pattern>{"role":"${FL_ROLE}","region":"${FL_REGION}"}</pattern>
        </pattern>
      </providers>
    </encoder>
  </appender>
{{- end }}

{{- if eq (getv "/kilda_logging_fl_logaccess") "true" }}
  <!-- json-access -->
  <appender name="ACCESS_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>{{ getv "/kilda_logging_logfile_path" }}/floodlight_access-${FL_ROLE}-${FL_REGION}.log.json</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>{{ getv "/kilda_logging_logfile_path" }}/floodlight_access-${FL_ROLE}-${FL_REGION}.log.json.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
      <maxFileSize>250MB</maxFileSize>
      <totalSizeCap>1GB</totalSizeCap>
      <maxHistory>4</maxHistory>
    </rollingPolicy>
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
       <customFields>{"role":"${FL_ROLE}","region":"${FL_REGION}"}</customFields>
    </encoder>
  </appender>
{{- end }}

  <!-- logging setup -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
{{- if eq (getv "/kilda_logging_json_file") "true" }}
    <appender-ref ref="JSON" />
{{- end }}
{{- if eq (getv "/kilda_logging_logstash") "true" }}
    <appender-ref ref="LOGSTASH" />
{{- end }}
  </root>

  <!-- custom log levels -->
  <logger name="io" level="ERROR"/> <!-- Netty logging -->
  <logger name="LogService" level="INFO" additivity="false"><!-- Restlet access logging detached from root -->
{{- if eq (getv "/kilda_logging_fl_logaccess") "true" }}
    <appender-ref ref="ACCESS_JSON"/>
{{- end }}
  </logger>
  <logger name="net.floodlightcontroller" level="INFO"/>
  <logger name="org.sdnplatform" level="ERROR"/>
  <logger name="ch.qos.logback" level="INFO"/>
  <logger name="org.apache.kafka.clients" level="INFO"/>
  <logger name="org.openkilda.floodlight.switchmanager.SwitchManager" level="DEBUG"/>
  <logger name="org.openkilda.floodlight.pathverification.PathVerificationService.ISL" level="INFO"/>
  <logger name="org.openkilda" level="{{ getv "/kilda_logging_fl_loglevel" }}"/>
</configuration>
